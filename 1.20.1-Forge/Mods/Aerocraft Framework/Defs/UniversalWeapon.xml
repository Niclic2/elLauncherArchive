<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--基础武器-->
  <ThingDef ParentName="MYDE_AerocraftFramework_WeaponBase_XmlParent">
    <defName>MYDE_AF_UniversalWeapon_BaseGun</defName>
    <label>Basic gun</label>
    <description>Basic weapon, with weapon performance equivalent to a small automatic machine gun tower</description>
    <graphicData>
      <texPath>AerocraftFramework/UniversalWeapon/BaseGun</texPath>
    </graphicData>
    <statBases>
      <AccuracyTouch>0.77</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.24</AccuracyLong>
      <RangedWeapon_Cooldown>4.3</RangedWeapon_Cooldown>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <defaultProjectile>Bullet_MiniTurret</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>28.9</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>2</burstShotCount>
        <soundCast>GunShotA</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
    <costList>
      <Steel>20</Steel>
    </costList>
  </ThingDef>
  <!--武器安装·速射机枪-->
  <ThingDef ParentName="MYDE_AerocraftFramework_AddableWeapon_XmlParent">
    <defName>MYDE_AF_AddableWeapon_MiniGun</defName>
    <label>Weapon·Minigun</label>
    <description>Installing Minigun for Aerocraft</description>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>AerocraftFramework/UniversalWeapon/MiniGun</texPath>
    </graphicData>
    <uiIconPath>AerocraftFramework/UniversalWeapon/MiniGun</uiIconPath>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>MultibarrelWeapons</li>
    </researchPrerequisites>
    <comps>
      <li Class="MYDE_AerocraftFramework.CompProperties_AddableWeapon_Add">
        <AddableWeaponDef>MYDE_AF_UniversalWeapon_MiniGun</AddableWeaponDef>
      </li>
    </comps>
    <costList>
      <Steel>160</Steel>
      <ComponentIndustrial>20</ComponentIndustrial>
    </costList>
  </ThingDef>
  <ThingDef ParentName="MYDE_AerocraftFramework_WeaponBase_XmlParent">
    <defName>MYDE_AF_UniversalWeapon_MiniGun</defName>
    <label>Minigun</label>
    <description>Minigun</description>
    <graphicData>
      <texPath>AerocraftFramework/UniversalWeapon/MiniGun</texPath>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <Mass>10</Mass>
      <AccuracyTouch>0.15</AccuracyTouch>
      <AccuracyShort>0.25</AccuracyShort>
      <AccuracyMedium>0.25</AccuracyMedium>
      <AccuracyLong>0.18</AccuracyLong>
      <RangedWeapon_Cooldown>4.3</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Minigun</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>30.9</range>
        <burstShotCount>25</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <costList>
      <Steel>160</Steel>
      <ComponentIndustrial>20</ComponentIndustrial>
    </costList>
  </ThingDef>
