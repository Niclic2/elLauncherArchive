<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--父类·机体-->
  <ThingDef ParentName="BuildingBase" Abstract="True" Name="MYDE_AerocraftFramework_XmlParent">
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>AerocraftFramework/Nothing/Nothing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <uiIconPath>AerocraftFramework/Nothing/Nothing</uiIconPath>
    <uiIconScale>1</uiIconScale>
    <stealable>false</stealable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <passability>Standable</passability>
    <pathCost>0</pathCost>
    <fillPercent>0.99</fillPercent>
    <hasTooltip>true</hasTooltip>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <altitudeLayer>WorldClipper</altitudeLayer>
    <placeWorkers>
      <li>MYDE_AerocraftFramework.PlaceWorker_DrawAerocraft</li>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <expandHomeArea>false</expandHomeArea>
      <isInert>true</isInert>
      <!--必须为False，不然会导致无法生成额外武器-->
      <isEdifice>False</isEdifice>
    </building>
    <inspectorTabs>
      <li>MYDE_AerocraftFramework.ITab_Aerocraft_Weapon</li>
    </inspectorTabs>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    <!--<comps><li Class="MYDE_AerocraftFramework.CompProperties_Test_Get_AngleAndRange"></li></comps>-->
    <!--这个是用来控制是否在战争迷雾可见-->
    <seeThroughFog>true</seeThroughFog>
    <drawOffscreen>true</drawOffscreen>
  </ThingDef>
  <!--父类·武器安装-->
  <ThingDef ParentName="BuildingBase" Abstract="True" Name="MYDE_AerocraftFramework_AddableWeapon_XmlParent">
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>AerocraftFramework/Nothing/Nothing</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
      <!--<damageData><rect>(0.2,0.2,0.6,0.6)</rect></damageData>-->
      <!--<shadowData><volume>(0.27,0.25,0.27)</volume><offset>(0,0,0)</offset></shadowData>-->
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <stealable>false</stealable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToBuild>3000</WorkToBuild>
      <Mass>5</Mass>
      <Beauty>0</Beauty>
    </statBases>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <passability>Standable</passability>
    <pathCost>0</pathCost>
    <fillPercent>0</fillPercent>
    <hasTooltip>true</hasTooltip>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <altitudeLayer>WorldClipper</altitudeLayer>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <expandHomeArea>false</expandHomeArea>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      <!--射击的预热时间，不知道为什么泰南写了却从来没用过-->
    </building>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <size>(1,1)</size>
    <uiOrder>3000</uiOrder>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <designationCategory>MYDE_AerocraftFramework_DesignationCategory</designationCategory>
    <placeWorkers>
      <li>MYDE_AerocraftFramework.PlaceWorker_InBaseThing</li>
    </placeWorkers>
  </ThingDef>
  <!--父类·基础武器-->
  <ThingDef Name="MYDE_AerocraftFramework_WeaponBase_XmlParent" Abstract="True" ParentName="BaseGun">
    <smeltable>True</smeltable>
    <relicChance>1</relicChance>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <useHitPoints>false</useHitPoints>
    <weaponTags></weaponTags>
    <statBases>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <techLevel>Industrial</techLevel>
  </ThingDef>
</Defs>